@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <div id="LoginUsuario" class="container">
        <div class="row align-items-center justify-content-center" style="height:60vh;">
            <div class="col-8">
                <h5 class="card-title text-center"></h5>
                <div class="card ">
                    <div class="row ">
                        <div class="col-md-3"></div>
                        <div class="col-md-6">
                            <div class="card-body">
                                <img src="~/Imagenes/netpoints.png" />
                                <h5 class="card-title text-center"></h5>
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="Usuario" placeholder="Nombre" v-model="Model.Usuario">
                                    <label for="Usuario"><i class='bx bx-user'></i>Usuario</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="password" class="form-control" id="Clave" placeholder="Clave" v-model="Model.Clave">
                                    <label for="Clave"> <i class='bx bxs-lock'></i>Contraseña</label>
                                </div>
                                <br />
                                <div class="row justify-content-Center">
                                    <div div class="col-3">
                                        <button type="button" class="btn btn-outline-secondary" @@click="LoginUsuario">Ingresar</button>

                                    </div>
                                    <div div class="col-5">
                                        <button type="button" class="btn btn-outline-secondary"
                                                onclick="window.location.href = '/Login';">
                                            Cancelar
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @section scripts{
        <script src="~/Scripts/Login/Login.js"></script>
    }
</body>
</html>

