@model Entidades.EEnlaces

@{
    ViewBag.Title = "Agregar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="EnlacesEdit" class="container">

    <div class="row" v-if="true">
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">@(TypeForm.Value ? "Editar Enlace" : "Nuevo Enlace")</h4>
                    <form id="FormEnlaces">

                        <input type="hidden" name="IdEnlace" v-model="model.IdEnlace" />

                        <div class="form-floating mb-3 form-group">
                            <select class="form-control" id="IdOficina" name="IdOficina" arial-label="Default select example" v-model="model.IdOficina" required>
                                @foreach (var item in Model.ddlOficinas)
                                {
                                    <option value="@item.IdOficina">@item.NombreOficina</option>
                                }
                            </select>
                            <label for="Oficinas">Sitio</label>
                        </div>
                        <div class="form-floating mb-3 form-group">
                            <select class="form-control" id="IdOficina" name="IdOficina" arial-label="Default select example" v-model="model.IdOficina" required>
                                @foreach (var item in Model.ddlOficinas)
                                {
                                    <option value="@item.IdOficina">@item.UE</option>
                                }
                            </select>
                            <label for="Oficinas">Unidad Ejecutora</label>
                        </div>
                        <div class="form-floating mb-3 form-group">
                            <select class="form-control" id="IdOficina" name="IdOficina" arial-label="Default select example" v-model="model.IdOficina" required>
                                @foreach (var item in Model.ddlOficinas)
                                {
                                    <option value="@item.IdOficina">@item.Provincia</option>
                                }
                            </select>
                            <label for="Oficinas">Provincia</label>
                        </div>
                        <div class="form-floating mb-3 form-group">
                            <select class="form-control" id="IOficina" name="IdOficina" arial-label="Default select example" v-model="model.IdOficina" required>
                                @foreach (var item in Model.ddlOficinas)
                                {
                                    <option value="@item.IdOficina">@item.Comentario</option>
                                }
                            </select>
                            <label for="Oficinas">Comentarios</label>
                        </div>
                        <div class="form-floating mb-3 form-group">
                            <select class="form-control" id="IdRed" name="IdRed" arial-label="Default select example" v-model="model.IdRed" required>
                                @foreach (var item in Model.ddlRedes)
                                {
                                    <option value="@item.IdRed">@item.Linea</option>
                                }
                            </select>
                            <label for="Redes">Número de Linea</label>
                        </div>

                        <div class="form-floating mb-3 form-group">
                            <select class="form-control" id="IdRed" name="IdRed" arial-label="Default select example" v-model="model.IdRed" required>
                                @foreach (var item in Model.ddlRedes)
                                {
                                    <option value="@item.IdRed">@item.Gateway</option>
                                }
                            </select>
                            <label for="Redes">IP Gateway</label>
                        </div>
                        <div class="form-floating mb-3 form-group">
                            <select class="form-control" id="IdRed" name="IdRed" arial-label="Default select example" v-model="model.IdRed" required>
                                @foreach (var item in Model.ddlRedes)
                                {
                                    <option value="@item.IdRed">@item.Interface</option>
                                }
                            </select>
                            <label for="Redes">Interface</label>
                        </div>
                        <div class="form-floating mb-3 form-group">
                            <select class="form-control" id="IdRed" name="IdRed" arial-label="Default select example" v-model="model.IdRed" required>
                                @foreach (var item in Model.ddlRedes)
                                {
                                    <option value="@item.IdRed">@item.TipoEnlace</option>
                                }
                            </select>
                            <label for="Redes">Tipo Enlace</label>
                        </div>
                        <div class="form-floating mb-3 form-group">
                            <select class="form-control" id="IdRed" name="IdRed" arial-label="Default select example" v-model="model.IdRed" required>
                                @foreach (var item in Model.ddlRedes)
                                {
                                    <option value="@item.IdRed">@item.Bandwidth</option>
                                }
                            </select>
                            <label for="Redes">Bandwidth</label>
                        </div>
                        <div class="form-floating mb-3 form-group">
                            <select class="form-control" id="IdRed" name="IdRed" arial-label="Default select example" v-model="model.IdRed" required>
                                @foreach (var item in Model.ddlRedes)
                                {
                                    <option value="@item.IdRed">@item.MedioEnlace</option>
                                }
                            </select>
                            <label for="Redes">Medio Enlace</label>
                        </div>
                        <div class="form-floating mb-3 form-group">
                            <select class="form-control" id="IdRed" name="IdRed" arial-label="Default select example" v-model="model.IdRed" required>
                                @foreach (var item in Model.ddlRedes)
                                {
                                    <option value="@item.IdRed">@item.Comentario</option>
                                }
                            </select>
                            <label for="Redes">Comentario</label>
                        </div>
                        <div class="form-floating mb-3 form-group">
                            <select class="form-control" id="IdProveedor" name="IdProveedor" arial-label="Default select example" v-model="model.IdProveedor" required>
                                @foreach (var item in Model.ddlProveedores)
                                {
                                    <option value="@item.IdProveedor">@item.NombreEmpresa</option>
                                }
                            </select>
                            <label for="Proveedores">Proveedor</label>
                        </div>
                        <div class="form-floating mb-3 form-group">
                            <textarea class="form-control" type="text" name="Comentario" id="textarea" v-model="model.Comentario" rows="3"> </textarea>
                            <label for="Comentario"> Comentarios </label>
                        </div>
                        <br />
                        <div class="mb-3">
                            <button type="button" @@click="Save" class="btn btn-outline-primary">Guardar <i class='bx bx-save'></i></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/Enlaces/Agregar.js"></script>
}
