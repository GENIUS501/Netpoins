@model Netpoints.Models.ERolViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="RolesEdit" class="container">

    <div class="row" v-if="true">
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Editar Rol</h4>
                    <form action="/Roles/Edit" method="POST" id="Confirmar">
                        <input type="hidden" name="IdRol" value="@Model.IdRol" />
                        <div class="form-floating mb-3 form-group">
                            <input class="form-control" type="text" name="Rol" id="Rol" value="@Model.Rol" maxlength="20" placeholder="Rol" required readonly/>
                            <label for="Rol"> Rol</label>
                        </div>
                        <div class="form-floating mb-3 form-group ">
                            <input class="form-control" type="text" name="Descripcion" id="Descripcion" value="@Model.Descripcion" maxlength="200" placeholder="Descripción" required />
                            <label for="Descripcion"> Descripción</label>
                        </div>
                        <div class="form-check form-group form-group">
                            <input class="form-check-input" type="checkbox" id="Estado" name="Estado" value="@Model.Estado" />
                            <label class="form-check-label" for="Estado">
                                Estado
                            </label>
                        </div>
                        <h3>Permisos</h3>
                        <div class="row ">
                            <!--Permisos-->
                            <div class="col-3">
                                <input type="checkbox" id="radusu" name="radusu" value="true" onchange='Usuarios(this);' @if (Model.radusu == true) { @Html.Raw("checked='checked'"); }>
                                <label for="radusu">Usuarios</label>
                                <br />
                                <div id="Usuarios">
                                    &nbsp;&nbsp;&nbsp;<input type="checkbox" name="checkusuA" value="true" @if (Model.checkusuA == true) { @Html.Raw("checked='checked'"); }>
                                    <label for="checkusuA">Agregar</label>
                                    <br />
                                    &nbsp;&nbsp;&nbsp;<input type="checkbox" name="checkusuE" value="true" @if (Model.checkusuE == true) { @Html.Raw("checked='checked'"); }>
                                    <label for="checkusuE">Editar</label>
                                    <br />
                                    &nbsp;&nbsp;&nbsp;<input type="checkbox" name="checkusuD" value="true" @if (Model.checkusuD == true) { @Html.Raw("checked='checked'"); }>
                                    <label for="checkusuD">Desactivar</label>
                                </div>
                            </div>
                            <div class="col-3">
                                <input type="checkbox" name="radrol" id="radrol" value="true" onchange='Roles(this);' @if (Model.radrol == true) { @Html.Raw("checked='checked'"); }>
                                <label for="radrol">Roles</label>
                                <br />
                                <div id="Roles">
                                    &nbsp;&nbsp;&nbsp;<input type="checkbox" name="checkrolA" value="true" @if (Model.checkrolA == true) { @Html.Raw("checked='checked'"); }>
                                    <label for="checkrolA">Agregar</label>
                                    <br />
                                    &nbsp;&nbsp;&nbsp;<input type="checkbox" name="checkrolE" value="true" @if (Model.checkrolE == true) { @Html.Raw("checked='checked'"); }>
                                    <label for="checkrolE">Editar</label>
                                    <br />
                                    &nbsp;&nbsp;&nbsp;<input type="checkbox" name="checkrolD" value="true" @if (Model.checkrolD == true) { @Html.Raw("checked='checked'"); }>
                                    <label for="checkrolD">Desactivar</label>
                                </div>
                            </div>
                            <div class="col-3">
                                <input type="checkbox" name="radprov" id="radprov" value="true" onchange='Proveedores(this);' @if (Model.radprov == true) { @Html.Raw("checked='checked'"); }>
                                <label for="radprov">Proveedores</label>
                                <br />
                                <div id="Proveedores">
                                    &nbsp;&nbsp;&nbsp;<input type="checkbox" name="checkprovA" value="true" @if (Model.checkprovA == true) { @Html.Raw("checked='checked'"); }>
                                    <label for="checkprovA">Agregar</label>
                                    <br />
                                    &nbsp;&nbsp;&nbsp;<input type="checkbox" name="checkprovE" value="true" @if (Model.checkprovE == true) { @Html.Raw("checked='checked'"); }>
                                    <label for="checkprovE">Editar</label>
                                    <br />
                                    &nbsp;&nbsp;&nbsp;<input type="checkbox" name="checkprovD" value="true" @if (Model.checkprovD == true) { @Html.Raw("checked='checked'"); }>
                                    <label for="checkprovD">Eliminar</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <br />
                            <div class="col-3">
                                <input type="checkbox" name="radred" id="radred" value="true" onchange='Redes(this);' @if (Model.radred == true) { @Html.Raw("checked='checked'"); }>
                                <label for="radred">Redes</label>
                                <br />
                                <div id="Redes">
                                    &nbsp;&nbsp;&nbsp;<input type="checkbox" name="checkredA" value="true" @if (Model.checkredA == true) { @Html.Raw("checked='checked'"); }>
                                    <label for="checkredA">Agregar</label>
                                    <br />
                                    &nbsp;&nbsp;&nbsp;<input type="checkbox" name="checkredE" value="true" @if (Model.checkredE == true) { @Html.Raw("checked='checked'"); }>
                                    <label for="checkredE">Editar</label>
                                    <br />
                                    &nbsp;&nbsp;&nbsp;<input type="checkbox" name="checkredD" value="true" @if (Model.checkredD == true) { @Html.Raw("checked='checked'"); }>
                                    <label for="checkredD">Eliminar</label>
                                </div>
                            </div>
                            <div class="col-3">
                                <input type="checkbox" name="radsitios" id="radsitios" value="true" onchange='Sitios(this);' @if (Model.radsitios == true) { @Html.Raw("checked='checked'"); }>
                                <label for="radsitios">Sitios</label>
                                <br />
                                <div id="Sitios">
                                    &nbsp;&nbsp;&nbsp;<input type="checkbox" name="checksitA" value="true" @if (Model.checksitA == true) { @Html.Raw("checked='checked'"); }>
                                    <label for="checksitA">Agregar</label>
                                    <br />
                                    &nbsp;&nbsp;&nbsp;<input type="checkbox" name="checksitE" value="true" @if (Model.checksitE == true) { @Html.Raw("checked='checked'"); }>
                                    <label for="checksitE">Editar</label>
                                    <br />
                                    &nbsp;&nbsp;&nbsp;<input type="checkbox" name="checksitD" value="true" @if (Model.checksitD == true) { @Html.Raw("checked='checked'"); }>
                                    <label for="checksitD">Eliminar</label>
                                </div>
                            </div>
                            <div class="col-3">
                                <input type="checkbox" name="radenlace" id="radenlace" value="true" onchange='Enlaces(this);' @if (Model.radenlace == true) { @Html.Raw("checked='checked'"); }>
                                <label for="radenlace">Enlaces</label>
                                <br />
                                <div id="Enlaces">
                                    &nbsp;&nbsp;&nbsp;<input type="checkbox" name="checkenlA" value="true" @if (Model.checkenlA == true) { @Html.Raw("checked='checked'"); }>
                                    <label for="checkenlA">Agregar</label>
                                    <br />
                                    &nbsp;&nbsp;&nbsp;<input type="checkbox" name="checkenlE" value="true" @if (Model.checkenlE == true) { @Html.Raw("checked='checked'"); }>
                                    <label for="checkenlE">Editar</label>
                                    <br />
                                    &nbsp;&nbsp;&nbsp;<input type="checkbox" name="checkenlD" value="true" @if (Model.checkenlD == true) { @Html.Raw("checked='checked'"); }>
                                    <label for="checkenlD">Eliminar</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <input type="checkbox" name="repproveedor" value="true" @if (Model.repproveedor == true) { @Html.Raw("checked='checked'"); }>
                                <label for="repproveedor">Reporte por Proveedor</label>
                            </div>
                            <div class="col-6">
                                <input type="checkbox" name="repubicacion" value="true" @if (Model.repubicacion == true) { @Html.Raw("checked='checked'"); }>
                                <label for="repubicacion">Reporte por Ubicación</label>
                            </div>
                            <div class="col-6">
                                <input type="checkbox" name="repusuarios" value="true" @if (Model.repusuarios == true) { @Html.Raw("checked='checked'"); }>
                                <label for="repususuarios">Reporte de Usuarios</label>
                            </div>
                            <div class="col-6">
                                <input type="checkbox" name="bitreg" value="true" @if (Model.bitreg == true) { @Html.Raw("checked='checked'"); }>
                                <label for="bitreg">Bitacora de Registros</label>
                            </div>
                            <div class="col-6">
                                <input type="checkbox" name="bitcam" value="true" @if (Model.bitcam == true) { @Html.Raw("checked='checked'"); }>
                                <label for="bitcam">Bitacora de Cambios</label>
                            </div>
                        </div>
                        <br />
                        <div class="mb-3">
                            <button type="submit" class="btn btn-outline-primary">Guardar <i class='bx bx-edit'></i></button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/Roles/Edit.js"></script>
    <script>
        let Estado = '@Model.Estado';
        if (Estado === "True") {
            $('#Estado').prop('checked', true);
        }
    </script>
    <script>
        CreateValidator("#RolesEdit");
        $("#Datos").hide();
        $("#Usuarios").hide();
        $("#Roles").hide();
        $("#Proveedores").hide();
        $("#Redes").hide();
        $("#Sitios").hide();
        $("#Enlaces").hide();
        if ($("#radusu").prop('checked')) {
            $("#Usuarios").show();
        }
        if ($("#radrol").prop('checked')) {
            $("#Roles").show();
        }
        if ($("#radprov").prop('checked')) {
            $("#Proveedores").show();
        }
        if ($("#radred").prop('checked')) {
            $("#Redes").show();
        }
        if ($("#radsitios").prop('checked')) {
            $("#Sitios").show();
        }
        if ($("#radenlace").prop('checked')) {
            $("#Enlaces").show();
        }
        function Usuarios(checkbox) {
            if (checkbox.checked == true) {
                $("#Usuarios").show();
            } else {
                $("#Usuarios").hide();
            }
        }
        function Roles(checkbox) {
            if (checkbox.checked == true) {
                $("#Roles").show();
            } else {
                $("#Roles").hide();
            }
        }
        function Proveedores(checkbox) {
            if (checkbox.checked == true) {
                $("#Proveedores").show();
            } else {
                $("#Proveedores").hide();
            }
        }
        function Redes(checkbox) {
            if (checkbox.checked == true) {
                $("#Redes").show();
            } else {
                $("#Redes").hide();
            }
        }
        function Sitios(checkbox) {
            if (checkbox.checked == true) {
                $("#Sitios").show();
            } else {
                $("#Sitios").hide();
            }
        }
        function Enlaces(checkbox) {
            if (checkbox.checked == true) {
                $("#Enlaces").show();
            } else {
                $("#Enlaces").hide();
            }
        }
    </script>
}
