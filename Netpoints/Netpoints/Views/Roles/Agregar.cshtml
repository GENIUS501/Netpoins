@model Entidades.ERol

@{
    ViewBag.Title = "Agregar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div id="RolesEdit" class="container">

    <div class="row">
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Nuevo Rol</h4>
                    <form action="/Roles/Agregar" method="POST" id="Confirmar">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.IdRol)
                        <div class="form-floating mb-3 form-group">
                            @Html.LabelFor(model => model.Rol)
                            @Html.EditorFor(model => model.Rol, new { htmlAttributes = new { @class = "form-control", @required= "required" } })
                            @*@Html.ValidationMessageFor(model => model.Rol, "", new { @class = "text-danger" })*@
                        </div>

                        <div class="form-floating mb-3 form-group">
                            <label for="Descripcion"> Descripción</label>
                            @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control", @required= "required" } })
                            @*@Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })*@
                        </div>

                        <div class="form-check form-group form-group">
                            @Html.LabelFor(model => model.Estado, htmlAttributes: new { @class = "form-check-label" })
                            @Html.EditorFor(model => model.Estado, new { @class = "form-check-input" })
                            @*@Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })*@
                        </div>
                        <br />
                        <div class="mb-3">
                            <button type="submit" class="btn btn-outline-primary">Guardar <i class='bx bx-save'></i></button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>
    <script src="~/Scripts/Roles/Agregar.js"></script>
}
