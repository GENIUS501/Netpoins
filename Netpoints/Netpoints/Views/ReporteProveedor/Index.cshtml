@model IEnumerable<Entidades.EProveedores>

@{
    ViewBag.Title = "Reporte de proveedores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-3">
        <div class="card">
            <div class="card-body">
                <form>
                    <div class="form-floating mb-3 form-group">
                        <input class="form-control" type="text" name="Nombre" id="Nombre" placeholder="Proveedor" required />
                        <label for="Nombre"> Proveedor </label>
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-outline-primary">Buscar<i class='bx bx-search'></i></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<br />
<table class="table table-dark table-hover" id="Reporte">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdProveedor)
            </th>
            <th>
                Proveedor
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contacto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comentario)
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdProveedor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreEmpresa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Contacto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comentario)
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
