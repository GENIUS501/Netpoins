            var f = new Date();
            var d = f.getDate() + "/" + f.getMonth() + "/" + f.getFullYear() + " " + f.getHours() + ":" + f.getMinutes();
            $('#Reporte').DataTable({
                "searching": false,// false to disable pagination (or any other option)
                "lengthChange": false,
                dom: 'Bfrtip',

                buttons: [
                    {
